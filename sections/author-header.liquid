
<div class="page-width">
    <div class="heading author-heading">
        <div class="d-flex">
            <h2 class="h1 d-flex">
                <img src="https://assets-global.website-files.com/6100458938069cf141a3e966/617b1b3f39a7b1edcb83530b_61265c3bd4786ccd27cf5bad_vesselIMG.jpeg" loading="lazy" alt="" class="authorimg">
                {{page.title}}
            </h2>
        </div>
    </div> 
    <div class="gird grid--1-col">
        <div class="list">
            {% if template contains 'page.blog' %}
                {% assign handle = page.handle | prepend: 'pages/' %}
            {% else %}
                {% assign handle = blog.handle | prepend: 'blogs/' %}
            {% endif %}
            {% for block in section.blocks %}
                <div class="list-item">
                    <a href="{{block.settings.link}}" class="blogmenulink {% if block.settings.link contains handle %}active{% endif %}">{{block.settings.text}}</a>
                </div>
            {% endfor %}
        </div>
    </div>
</div>


{% schema %}
{
    "name": "Author header",
    "class": "blog-header-section color-accent-2 gradient",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title"
        }
    ],
    "blocks": [
        {
            "name": "link",
            "type": "link",
            "settings": [
                {
                    "type": "text",
                    "id": "text",
                    "label": "Text"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "Link"
                }
            ]
        }
    ],
    "presets": [
        {
            "category": "Blog",
            "name":"Author Header"
        }
    ]
}
{% endschema %}
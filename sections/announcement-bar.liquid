{%- for block in section.blocks -%}
  {%- case block.type -%}
    {%- when 'announcement' -%}
      <div class="announcement-bar-open" role="region" aria-label="{{ 'sections.header.announcement' | t }}" {{ block.shopify_attributes }}>
        {%- if block.settings.text != blank -%}
          {%- if block.settings.link != blank -%}
          {%- endif -%}
              <p class="announcement-bar__message h5">
                <span class="desktop_text_adbar"> {{ block.settings.text | escape }}</span> 
               <span class="mobile_text_adbar" style="display:none;">{{ block.settings.text_mobile | escape }}</span> 
                {%- if block.settings.link != blank -%}
                {%- endif -%}
              </p>
              <p class="announcement-bar__message_link h5">
                <a href="{{ block.settings.link }}" class="announcement-bar__link link link--text">
                {{ block.settings.text_link | escape }}
                {%- if block.settings.link != blank -%}
                {%- endif -%}
              </p>
          {%- if block.settings.link != blank -%}
             <a href="{{ block.settings.link }}" class="announcement-bar__link link link--text focus-inset animate-arrow"></a>
          {%- endif -%}
        {%- endif -%}
      </div>
      <style>
        #shopify-section-header {
    margin-top: 76px;
}
        @media screen and (max-width:1000px){
          .mobile_text_adbar{display:block!important;}
}

@media (min-width:1000px){
#MainContent {
  margin-top: 85px!important;
}
.give-section > img {
  top: 188px!important;
}
}
@media (max-width:999px) {
  #MainContent {
 margin-top: 155px!important;
}
}

      </style>
  {%- endcase -%}
{%- endfor -%}

{% schema %}
{
  "name": "t:sections.announcement-bar.name",
  "max_blocks": 12,
  "blocks": [
    {
      "type": "announcement",
      "name": "t:sections.announcement-bar.blocks.announcement.name",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "default": "Vessel V2 has arrived! New tests, a cup, new supplements & more.",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.text.label"
        },
        {
          "type": "text",
          "id": "text_mobile",
          "default": "Vessel V2 has arrived!",
          "label": "mobile text"
        },
        {
          "type": "text",
          "id": "text_link",
          "default": "Check it out",
          "label": "Text link"
        },
        {
          "type": "select",
          "id": "color_scheme",
          "options": [
            {
              "value": "background-1",
              "label": "t:sections.announcement-bar.blocks.announcement.settings.color_scheme.options__1.label"
            },
            {
              "value": "background-2",
              "label": "t:sections.announcement-bar.blocks.announcement.settings.color_scheme.options__2.label"
            },
            {
              "value": "inverse",
              "label": "t:sections.announcement-bar.blocks.announcement.settings.color_scheme.options__3.label"
            },
            {
              "value": "accent-1",
              "label": "t:sections.announcement-bar.blocks.announcement.settings.color_scheme.options__4.label"
            },
            {
              "value": "accent-2",
              "label": "t:sections.announcement-bar.blocks.announcement.settings.color_scheme.options__5.label"
            }
          ],
          "default": "accent-1",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.color_scheme.label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.announcement-bar.blocks.announcement.settings.link.label"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "announcement"
      }
    ]
  }
}
{% endschema %}
